<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/com_shift4_corner_radius" />
            <solid android:color="@color/com_shift4_primary" />
            <stroke android:width="1dp" android:color="@color/com_shift4_primary" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/com_shift4_corner_radius" />
            <solid android:color="@color/com_shift4_background" />
            <stroke android:width="1dp" android:color="@color/com_shift4_disabled" />
        </shape>
    </item>
</selector>