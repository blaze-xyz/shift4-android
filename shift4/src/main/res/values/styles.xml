<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SecurionPaySDKTransparentActivityStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="SecurionPaySDKBottomSheetDialogThemeNoFloating" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">stateAlwaysVisible</item>
    </style>

    <style name="SecurionPaySDKTextInputLayoutStyle" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textColorHint">@color/com_shift4_placeholder</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="backgroundColor">@android:color/transparent</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="helperTextTextColor">@color/com_shift4_primary</item>
        <item name="hintTextColor">@color/com_shift4_primary</item>
        <item name="boxStrokeColor">@color/com_shift4_primary</item>
        <item name="android:paddingLeft">1dp</item>
        <item name="android:paddingRight">1dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="colorControlActivated">@android:color/transparent</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorAccent">@android:color/transparent</item>
        <item name="android:colorControlActivated">@android:color/transparent</item>
    </style>

    <style name="SecurionPaySDKTextInputStyle" parent="Theme.AppCompat.Light">
        <item name="android:textSelectHandleRight">@android:color/transparent</item>
        <item name="android:textSelectHandleLeft">@android:color/transparent</item>
        <item name="android:textSelectHandle">@android:color/transparent</item>
        <item name="colorAccent">@android:color/transparent</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="backgroundColor">@android:color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">@dimen/com_shift4_padding_standard</item>
        <item name="android:paddingRight">@dimen/com_shift4_padding_standard</item>
        <item name="android:textColorHint">@color/com_shift4_primary</item>
        <item name="android:textCursorDrawable">@drawable/com_shift4_color_cursor</item>
        <item name="hintTextColor">@color/com_shift4_primary</item>
        <item name="colorControlActivated">@android:color/transparent</item>
    </style>

    <style name="SecurionPaySDKSwitchTheme" parent="">
        <item name="colorControlActivated">@color/com_shift4_primary</item>
        <item name="colorSwitchThumbNormal">@color/com_shift4_switch_back</item>
        <item name="android:colorForeground">@color/com_shift4_switch</item>
    </style>
</resources>